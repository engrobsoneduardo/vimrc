set number
set nocompatible
filetype indent plugin on
syntax on
set wildmenu
set showcmd
"set hlsearch
set ignorecase
set smartcase
set autoindent
set shiftwidth=4
set softtabstop=4
set expandtab

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <C-b> :bp<CR>
nnoremap <C-n> :bn<CR>
